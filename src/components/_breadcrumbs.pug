mixin breadcrumbs(title, ...items)

    .page-header

        .breadcrumbs

            .breadcrumbs-wrapper

                .breadcrumbs-item
                    a(href='/') Главная

                each item in items

                    if item == items[items.length - 1]
                        span.breadcrumbs-separator /
                        .breadcrumbs-item
                            span= item

                    else
                        span.breadcrumbs-separator /
                        .breadcrumbs-item
                            a(href="#")= item

        if title
            h1.main-title= title
                span (34)

        if page == 'page-catalog'

            .catalog-header

                .filter-search
                    form(action="/")
                        .input-search
                            button(type="submit" aria-label="Поиск").search-icon
                                +svg('Search')
                            input(type="search" name="search" placeholder="Поиск по категории" autocomplete="off")

                .filter-btn
                    +svg('Filter-edit')

                .sorting
                    .sorting__btn
                        +svg('Arrow-switch-horizontal')
                        | Сначала новые

                .view-style
                    .view-style__item.active
                        +svg('tile')
                    .view-style__item
                        +svg('list-line')