extends /layout/layout

block title
    - var title = 'Страница каталога'
    - var page = 'page-catalog'

block main

    include ../components/_breadcrumbs
    +breadcrumbs('Обработка металла', 'Каталог', 'Обработка металла')

    section.section-catalog

        .container

            .catalog

                .catalog__aside

                    .catalog__aside-title Фильтры
                        .close.js-filter-close
                            +svg('Close')

                    form(action="/")

                        .filter

                            .filter__item
                                .filter__category-item.active
                                    a(href="#") Обработка металла
                                .filter__category-item
                                    a(href="#") Сверление и обработка отверстий
                                .filter__category-item
                                    a(href="#") Металлорежущий инструмент
                                .filter__category-item
                                    a(href="#") Обработка кромки, снятие фаски
                                .filter__category-item
                                    a(href="#") Шлифовка и полировка
                                .filter__category-item
                                    a(href="#") Сверление и обработка отверстий
                                .filter__category-item
                                    a(href="#") Металлорежущий инструмент
                                .filter__category-item
                                    a(href="#") Обработка кромки, снятие фаски
                                .filter__category-item
                                    a(href="#") Шлифовка и полировка
                                .filter__category-item
                                    a(href="#") Сверление и обработка отверстий
                                .filter__category-item
                                    a(href="#") Металлорежущий инструмент
                                .filter__category-item
                                    a(href="#") Обработка кромки, снятие фаски

                            .filter__item
                                .filter__item-wrap
                                    .filter__item-name В наличии
                                    .filter__checkbox.switch
                                        input#switch(type="checkbox", name="switch")
                                        label(for="switch")

                            .filter__item
                                .filter__item-name Мощность
                                    span кВт

                                .range
                                    .range-values
                                        input.min-value(type="text" name="range" min='1' max='100' value='1')
                                        input.max-value(type="text" name="range" min='1' max='100' value='100')
                                    .range-slider
                                        .range-highlight
                                        input.range-min(type='range' name="range" min='1' max='100' value='1')
                                        input.range-max(type='range' name="range" min='1' max='100' value='100')

                            .filter__item
                                .filter__item-name Цена
                                    span ₽

                                .range
                                    .range-values
                                        input.min-value(type="text" data-financial name="range" min='1' max='2755000' value='1')
                                        input.max-value(type="text" data-financial name="range" min='1' max='2755000' value='2755000')
                                    .range-slider
                                        .range-highlight
                                        input.range-min(type='range' min='1' name="range" max='2755000' value='1')
                                        input.range-max(type='range' min='1' name="range" max='2755000' value='2755000')

                            .filter__item
                                .filter__item-name Тип привода
                                    .smart-filter-popup-result(style="display:inline-block;")
                                        a.smart-result-wrap(href="#")
                                            | Показать  (
                                            span 2
                                            | )
                                .checkbox
                                    input#type-1(type="checkbox" name="type")
                                    label(for="type-1") Электрический
                                        span (18)
                                .checkbox
                                    input#type-2(type="checkbox" name="type")
                                    label(for="type-2") Гидравлический
                                        span (16)
                                .checkbox
                                    input#type-3(type="checkbox" name="type")
                                    label(for="type-3") Пневматический
                                        span (14)
                                .checkbox
                                    input#type-4(type="checkbox" name="type")
                                    label(for="type-4") Механический
                                        span (12)

                            .filter__item
                                .filter__item-name Материал

                                .radio
                                    input#material-1(type="radio" name="material")
                                    label(for="material-1") Металл
                                        span (10)
                                .radio
                                    input#material-2(type="radio" name="material")
                                    label(for="material-2") Пластик
                                        span (8)
                                .radio
                                    input#material-3(type="radio" name="material")
                                    label(for="material-3") Композитный материал
                                        span (6)

                            .filter__item
                                .filter__item-name Производитель

                                .checkbox
                                    input#prod-1(type="checkbox" name="prod")
                                    label(for="prod-1") ATTA
                                        span (23)
                                .checkbox
                                    input#prod-2(type="checkbox" name="prod")
                                    label(for="prod-2") Векамак
                                        span (15)
                                .checkbox
                                    input#prod-3(type="checkbox" name="prod")
                                    label(for="prod-3") Tokagama
                                        span (11)
                                .checkbox
                                    input#prod-4(type="checkbox" name="prod")
                                    label(for="prod-4") King-Macc
                                        span (9)
                                .checkbox
                                    input#prod-5(type="checkbox" name="prod")
                                    label(for="prod-5") Practic
                                        span (6)

                                a(href="#").show-all Показать еще

                        .filter__action
                            a.btn.btn--primary(href="#")
                                p Применить
                                span Показать (390)
                            a.btn.btn--tertialy(href="#")
                                p Сбросить фильтр
                                span Сбросить

                        //- .filter__mobile
                        //-     a.btn.btn--primary(href="#") Показать (390)
                        //-     a.btn.btn--tertialy(href="#") Сбросить

                .catalog__inner

                    .catalog__wrap

                        include ../components/_card-white
                        +card
                        +card('Под заказ')
                        +card
                        +card('Под заказ')
                        +card
                        +card('Под заказ')
                        +card
                        +card('Под заказ')
                        +card
                        +card('Под заказ')
                        +card
                        +card('Под заказ')

                    include ../components/_pagination

    style.
        .smart-filter-popup-result {
            margin-top: -9px;
            margin-left: 10px;
            padding: 0 10px;
            position: absolute;
            display: none;
            min-height: 37px;
            font-size: 13px;
            font-weight: normal;
            white-space: nowrap;
            line-height: 18px;
            color: #3f3f3f;
            border: 1px solid #c6dce7;
            z-index: 915;
        }