extends /layout/layout

block title
    - var title = 'Страница каталога'
    - var page = 'page-catalog'

block main

    include ../components/_breadcrumbs
    +breadcrumbs('Обработка металла', 'Каталог', 'Обработка металла')

    section.section-catalog

        .container

            .catalog

                .catalog__aside

                    form(action="/") 

                        .filter

                            .filter__item
                                .filter__category-item.active Обработка металла
                                    ul

                                        li Сверление и обработка отверстий
                                            ul
                                                li Магнитные сверлильные станки

                                        li Магнитные сверлильные станки
                                        li Вертикально-сверлильные станки
                                        li Радиально-сверлильные станки
                                        li Вертикально-сверлильные станки
                                        li Радиально-сверлильные станки

                                .filter__category-item Сверление и обработка отверстий
                                .filter__category-item Металлорежущий инструмент
