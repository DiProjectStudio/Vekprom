extends /layout/layout

block title
    - var title = 'Просмотренное'
    - var page = 'page-personal'

block main

    section.section-personal

        .container

            .personal

                .personal-aside

                    .personal__user
                        span К
                        p Константин

                    ul.personal__nav
                        li
                            a(href="#")
                                +svg('Info')
                                |Личные данные
                        li
                            a(href="#").notice
                                +svg('Basket')
                                |Мои заказы
                                span (2)
                        li
                            a(href="#")
                                +svg('Heart')
                                |Избранное
                                span (2)
                        li
                            a(href="#")
                                +svg('Password-Show')
                                |Просмотренное
                        li
                            a(href="#").active
                                +svg('Message-text')
                                |Мои отзывы
                                span (2)

                    a.personal__exit(href="#") Выйти

                .personal-main
                    
                    .personal__title Мои отзывы

                    .personal-empty
                        .personal-empty__title Отзывов пока нет
                        .personal-empty__text Оставьте свой первый отзыв об услуге или купленном товаре
                        .btn.btn--primary(data-src="#popup-review" data-fancybox) Оставить отзыв