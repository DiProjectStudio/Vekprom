extends /layout/layout

block title
    - var title = 'Мои заказы'
    - var page = 'page-personal'

block main

    section.section-personal

        .container

            .personal

                .personal-aside

                    .personal__user
                        span К
                        p Константин

                    ul.personal__nav
                        li
                            a(href="personal")
                                +svg('Info')
                                |Личные данные
                        li
                            a(href="personal-orders").notice.active
                                +svg('Basket')
                                |Мои заказы
                                span (2)
                        li
                            a(href="personal-favourite")
                                +svg('Heart')
                                |Избранное
                                span (2)
                        li
                            a(href="personal-viewed")
                                +svg('Password-Show')
                                |Просмотренное
                        li
                            a(href="personal-reviews")
                                +svg('Message-text')
                                |Мои отзывы

                    a.personal__exit(href="#") Выйти

                .personal-main
                    
                    .personal__title Мои заказы

                    .orders

                        .order.expanded
                            .order__head
