extends /layout/layout

block title
    - var title = 'Типовая страница (шаблон)'
    - var page = 'sample-page'

block main

    include ../components/_breadcrumbs
    +breadcrumbs('Длинный заголовок первого порядка в две строки')

    section.section-sample
        .container
            .section-sample__inner
                .section-sidebar
                    .section-sidebar__wrapper
                        .section-sidebar-info.single-column
                            a(href="#id1").info-row.active
                                .info-cell Заголовок второго порядка
                            a(href="#id2").info-row
                                .info-cell Заголовок второго порядка
                            a(href="#id3").info-row
                                .info-cell Заголовок второго порядка

                .section-content
                    .section-content-wrapper
                        .content-text(id='id1')
                            .content-text__title Заголовок второго порядка
                            p 4 апреля в МГТУ им. Н.Э. Баумана прошла ярмарка ведущих работодателей страны с их карьерными предложениями для студентов и выпускников университета. Центр карьеры предоставил возможность студентам лично
                                |пообщаться с работодателями и получить возможность пройти стажировку или предложение о трудоустройстве.

                        .content-action
                            a(href='javascript:void(0)').btn.btn-mini
                                span Подробнее
                                +svg('Arrow-narrow-up-right')

                        .content-image-block.image-small
