block header

    header#header.header

        .container

            .header__top

                nav.header__nav
                    ul.header__menu
                        li.header__menu-item
                            a.header__menu-link О компании
                            ul.submenu
                                li
                                    a(href="#") О компании
                                li
                                    a(href="#") Пресс-центр
                                li
                                    a(href="#") Проекты
                                li
                                    a(href="#") Лицензии
                                li
                                    a(href="#") Отзывы

                        li.header__menu-item
                            a.header__menu-link(href="#") Контакты

                        li.header__menu-item
                            a.header__menu-link(href="#") Вакансии

                        li.header__menu-item
                            a.header__menu-link(href="#") Сервис и поддержка

                        li.header__menu-item
                            a.header__menu-link(href="#") Демозал
                            +img('badge-3d.svg')

                    ul.header__bar

                        li.header__bar-item
                            a.header__callback(data-src="#popup-callback" data-fancybox) Заказать звонок

                        li.header__bar-item
                            a.header__phone(href="tel:+74952151645") +7 (495) 215-16-45

                        li.header__bar-item
                            .header__location
                                +svg('Map')
                                p Москва

            .header__main

                .header__logo
                    a(href="/")
                        +img('Logo_main.svg')

                button.header__catalog
                    +svg('catalog')
                    p Каталог

                .header__search
                    .input-style
                        input#header_search(type="search", name="header_search", placeholder="Поиск по сайту")
                    +svg('Search')

                button.header__selection Подобрать станок

                .header__burger
                    +svg('Burger')

                .header__category
                    a(href="#").header__category-item
                        +svg('saw')
                        p Металлообработка

                    a(href="#").header__category-item
                        +svg('laser')
                        p Лазерное оборудование

                    a(href="#").header__category-item
                        +svg('press')
                        p Прессовое оборудование

                    a(href="#").header__category-item
                        +svg('welder')
                        p Сварочное оборудование

                    a(href="#").header__category-item
                        +svg('helmet')
                        p Строительное оборудование

                    a(href="#").header__category-item
                        +svg('crane')
                        p Инструмент

                    a(href="#").header__category-item
                        +svg('gear')
                        p Запасные части